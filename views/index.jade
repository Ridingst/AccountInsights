//- index.jade
extends ./layout.jade

block row-content
  div.row
    div.col-xs-12
      div.well
        h3 Personality Insights
        form(role="form", style="white-space: pre")
          input.inputName.form-control(type="text", required, placeholder="Name", name="inputName")
          |#{inputName}
          input.inputEmail.form-control(type="text", required, placeholder="Email", name="inputEmail")
          |#{inputEmail}
          input.inputLocation.form-control(type="text", required, placeholder="Office Location", name="inputLocation")
          |#{inputLocation}
          textarea.content.form-control(rows='6', required='true',
                placeholder='Please enter the text to analyze (minimum of 100 words)...')
                |#{content}
              div.text-right
                span.wordsCount.small
          div.form-group.row
            div.col-lg-4.col-lg-push-4.col-xs-4
              button.btn.btn-block.clear-btn(type='button') Clear
            div.col-lg-4.col-lg-push-4.col-xs-4.col-xs-push-4
              button.btn.btn-block.analysis-btn(type='button') Analyze
    div.col-xs-12
      div.row
        div.form-group.row.loading.text-center.loading(style='display:none;')
          h2 &nbsp;
          img(src='images/watson.gif')
        div.form-group.row.error(style='display: none;')
          h2 &nbsp;
          div.well
            p.errorMsg
      div.results(style='display: none;')
        h3(style='height: 29px;') Your Personality*
        div.well
          div.summary-div
          div.text-right(style='color: gray')
            em.small *Compared to most people who participated in our surveys.

    div.results(style='display: none;')
      div.row
      div.col-xs-12
      ul.nav.nav.nav-tabs(role="tablist")
          li(role="presentation" class="active")
            a(href="#visual-tab" aria-controls="home" data-toggle="tab") Visualization of Personality Data 
          li(role="presentation" aria-controls="home" data-toggle="tab")
            a(href="#data-tab" aria-controls="home" role="tab" data-toggle="tab") Data Behind Your Personality
        div.tab-content
          div.tab-pane.active(role="tabpanel" id="visual-tab")
            h3 Visualization of Personality Data
            div.well#vizcontainer
          div.tab-pane(role="tabpanel" id="data-tab")
            h3 Data Behind Your Personality
            div.col-xs-6.well.traits(style='display: none;')
          

    //- templates to avoid to create HTML in javascript
    div.hidden
      div#header-template
        div.row.theader
          .col-lg-5.col-xs-5
            span Name
          .col-lg-7.col-xs-7.text-right
            span Value Â± Sampling Error

      div#trait-template
        div.row
          .tname.col-lg-7.col-xs-7
            span
          .tvalue.col-lg-5.col-xs-5.text-right
            span

      div#model-template
        div.row
          .col-lg-12.col-xs-12.text-center
            span

